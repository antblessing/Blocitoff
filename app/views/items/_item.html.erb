<tr id="item-<%= item.id %>">
  <td><%= item.name %></td>
  <td><%= distance_of_time_in_words(Time.now, item.created_at) %>
  </td>
  <td>
    <% if user == current_user %>
      <%= link_to "", [user, item], method: :delete, class: 'glyphicon glyphicon-ok', remote: true %>
    <% end %>
  </td>
</tr>



